                            String name="";
                            String branch="";
                            String rollnum=request.getParameter("roll");
                            String q2="SELECT * FROM students WHERE rollnum='"+rollnum+"'";
                            ResultSet rs2=facultyDao.Retrieve(q2);
                            if(rs2.next()){
                                name=rs2.getString("name");
                                branch=rs2.getString("branch");
                            }
                            String query="SELECT * FROM attendance WHERE rollnum='"+rollnum+"'";
                            ResultSet rs=facultyDao.Retrieve(query);
                            while(rs.next()){
                                present++;
                            }
                            String q1="SELECT * FROM classdetails WHERE branch='"+branch+"' OR branch='All'";
                            ResultSet rs1=facultyDao.Retrieve(q1);
                            while(rs1.next()){
                                classes++;
                            }
                            int absent=classes-present;
                            
